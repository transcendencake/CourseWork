@model CourseWork.Models.ViewModels.SubscribeViewModel


<body>
 <h3>@Localizer["Subscribe"]</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Subscribe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <input type="hidden" asp-for="BookId" value="@ViewBag.BookId"/>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Submit"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</body>
